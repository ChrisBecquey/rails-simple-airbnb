<h1>All our flats</h1>

<div class="container d-flex">
  <% @flats.each do |flat| %>
    <div class="card" style="width: 18rem;">
      <img src="https://source.unsplash.com/random" class="card-img-top" alt="Une belle image random">
      <div class="card-body">
        <h5 class="card-title"><%= flat.name %></h5>
        <p class="card-text"><%= flat.address %></p>
      </div>
      <div class="card-body d-flex justify-content-between">
        <p><i class="fas fa-user-friends"></i> <%= flat.number_of_guests %></p>
        <p><i class="fas fa-euro-sign"></i> <%= flat.price_per_night %></p>
      </div>
      <div class="card-body">
        <%= link_to "Edit", edit_flat_path(flat), class: "card-link red" %>
        <%= link_to "Remove", flat_path(flat), class: "card-link green" %>
        <%= link_to "More Info", flat_path(flat), class: "card-link blue" %>
      </div>
    </div>
  <% end %>
</div>
