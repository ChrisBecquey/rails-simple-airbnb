<div class="container d-flex ">
  <div class="container m-4 bg-light">
    <div>
      <h1><%= @flat.name %></h1>
    </div>

    <div>
      <h2>A bit more about this flat</h2>
      <p class="card-text">Here the address: <%= @flat.address %></p>

    </div>
  </div>

  <div class="container set m-4 bg-light">
    <div class="m-3">
      <h4>Book this place</h4>
      <p>Calendrier formulaire avec submit</p>
    </div>
    <div class="m-3">
      <h4>Details</h4>
      <div class="d-flex justify-content-between m-3">
        <p><i class="fas fa-user-friends"></i> <%= @flat.number_of_guests %></p>
        <p><i class="fas fa-euro-sign"></i> <%= @flat.price_per_night %></p>
      </div>
    </div>
    <div class="d-flex justify-content-between m-3">
      <div class="m-3">
        <h5>Share</h5>
      </div>
      <div class="d-flex m-3">
        <a href=""><i class="fab fa-facebook-square"></i></a>
        <a href=""><i class="fab fa-pinterest-square"></i></a>
        <a href=""><i class="fab fa-twitter-square"></i></a>
      </div>
    </div>
  </div>
</div>
